{
  "compilerOptions": {
    // "sourceRoot": "src",
    // "outDir": "dist",
    "module": "commonjs",
    "target": "es5",
    "lib": ["dom", "es6", "esnext", "es2017"],
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "Classic",
    "experimentalDecorators": true,
    // "noImplicitReturns": true,
    // "noImplicitThis": false,
    // "noImplicitAny": true,
    // "strictNullChecks": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "watch": true
  },
  "include": ["source/javascripts"],
  "exclude": ["node_modules"],
  "types": ["typePatches"]
}
